% 概要とキーワードの横幅を指定します
\newlength{\abstractwidth}
%\setlength{\abstractwidth}{\textwidth}
\setlength{\abstractwidth}{0.8\textwidth}

% 英文表題を登録するための命令を定義します
\renewenvironment{abstract}
  {\global\setbox\@abstractbox\hbox\bgroup
   \begin{minipage}[b]
     {\abstractwidth}
     \nlines{\centerline{\large \textbf{Abstract}}\par} % 概要標題（Abstract）
     %\vspace{\baselineskip}
    }
  {\end{minipage}\egroup}
\newcommand*{\keywords}[1]{\gdef\@keywords{#1}}


% \maketitleを再定義します  
\renewcommand{\maketitle}{\par
  \begingroup
    \renewcommand\thefootnote{\@fnsymbol\c@footnote}%
    \def\@makefnmark{\rlap{\@textsuperscript{\normalfont\@thefnmark}}}%
    \setcounter{footnote}{1}% footnote番号を1から開始します
    \long\def\@makefntext##1{\advance\leftskip 3zw
    \parindent 1zw\noindent
    \llap{\@textsuperscript{\normalfont\@thefnmark}\hskip0.3zw}##1}%
    \twocolumn[
      \@maketitle
      \vskip 0.5\baselineskip % 8pt
      %\vskip 6pt % 6truept?
    ]%
    \plainifnotempty
    \@thanks
  \endgroup
  \setcounter{footnote}{0}% footnote番号を初期化します
  \global\let\thanks\relax
  \global\let\maketitle\relax
  \global\let\@thanks\@empty
  \global\let\@author\@empty
  \global\let\title\relax
  \global\let\author\relax
  \global\let\and\relax}

% 標題全体を出力します
\def\@maketitle{%
  \begin{center}
    \let\footnote\thanks
    % 和文標題
    \ifx\@title\@undefined\else
      \nlines{\LARGE \@title \par}
      \vspace{0.5\baselineskip}
    \fi
    % 和文著者名
    \ifx\@author\@undefined\else
      \nlines{\Large \@author \par}
      \vspace{\baselineskip}
    \fi
    % 英文標題
    \ifx\@etitle\@undefined\else
      \nlines{\Large \@etitle \par}
      \vspace{0.5\baselineskip}
    \fi
    % 英文著者名
    \ifx\@eauthor\@undefined\else
      \nlines{\large \@eauthor}
      %\vspace{\baselineskip}
    \fi
  \end{center}
  % 英文概要
  % TODO: 表題を直接書く
  \ifx\@abstractbox\@undefined\else
    \nlines{\centerline{\box\@abstractbox}}
  \fi


  % 英文キーワード
  \ifx\@keywords\@undefined\else
    \nlines{\centerline{\parbox{\abstractwidth}{\textbf{Keywords:} \@keywords}}}
  \fi
  }

